<div class="shadow opacity-100 group-[:not(:has(_img.viewed))]/body:opacity-0 group-[:not(:has(_img.viewed))]/body:pointer-events-none fixed z-30 inset-0 bg-black/80 backdrop-blur transition-opacity" />

<script>
  const shadow = document.querySelector('.shadow')
  shadow.addEventListener('click', () => {
    document.querySelector('img.viewed').classList.remove('viewed')
  })
</script>